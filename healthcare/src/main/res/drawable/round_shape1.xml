<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c80ba2c8" android:endColor="#c80ba2c8"
                      android:angle="270"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"
                     android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/background_material_light" android:endColor="@color/background_material_light"
                      android:angle="270"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"
                     android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
        </shape>
    </item>

</selector>